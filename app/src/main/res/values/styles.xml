<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        // фикс для экранов с челкой
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="o_mr1">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="o_mr1">true</item>

        <item name="colorPrimaryDark">@color/backgroundColor</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:text">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/backgroundColor</item>
    </style>
</resources>
